
@{
    ViewBag.Title = "Search Page";
}

<div id="Search-Page" class="Search-Page" ng-controller="searchController">
    <div class="row" style="margin-top:30px;">
        <div class="col-xs-12 col-sm-4 col-md-4">
            <!-- Search area -->
            <div class="Search-Box">
                <form class="form-horizontal">
                    <div class="form-group">
                        <label for="inputStreet" class="col-sm-2 control-label">Street</label>
                        <div class="col-sm-10">
                            <input type="text" ng-model="filter.street" class="form-control" id="inputStreet" placeholder="Street">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputAddress" class="col-sm-2 control-label">Address</label>
                        <div class="col-sm-10">
                            <input type="text" ng-model="filter.address" class="form-control" id="inputAddress" placeholder="Address">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputCity" class="col-sm-2 control-label">City</label>
                        <div class="col-sm-10">
                            <input type="text" ng-model="filter.city" class="form-control" id="inputCity" placeholder="City">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputZipCode" class="col-sm-2 control-label">Zip Code</label>
                        <div class="col-sm-10">
                            <input type="text" ng-model="filter.zipCode" class="form-control" id="inputZipCode" placeholder="Zip Code">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputType1" class="col-sm-2 control-label">Type</label>
                        <div class="col-sm-offset-2 col-sm-10">
                            <div class="radio-inline">
                                <label>
                                    <input type="radio" ng-model="filter.type" name="radio1" checked="checked" id="inputType1" value="rent"> Rent (Default)
                                </label>
                            </div>
                            <div class="radio">
                                <label>
                                    <input type="radio" ng-model="filter.type" name="radio1" value="sell"> Sell
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="button" class="btn btn-default" ng-click="search()">Search</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <div class="col-xs-12 col-sm-6 col-md-8">
            
            <!-- progress bar -->
            <div class="progress" ng-show="loading">
                <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
                    Loading (60%)
                </div>
            </div>
            
            <!-- search result -->
            <div class="Search-Results" ng-hide="loading || houses.length < 1">
                <div class="list-group" ng-repeat="house in houses">
                    <div class="Result-Item">
                        <div class="Result-img-thumbnail"><span style="font-size:14pt;" aria-hidden="true" class="glyphicon glyphicon-home"></span></div>
                        <div class="Result-List-Details">
                            <div>
                                <h4 style="float:left; margin-right:50px;" class="list-group-item-heading">Code</h4>
                                <p style="float:right;" class="list-group-item-text">{{house.Code}}</p>
                            </div>
                            <div>
                                <h4 style="float:left; margin-right:50px;" class="list-group-item-heading">Address</h4>
                                <p style="float:right;" class="list-group-item-text">{{house.Address}}</p>
                            </div>
                            <div>
                                <h4 style="float:left; margin-right:50px;" class="list-group-item-heading">Price</h4>
                                <p style="float:right;" class="list-group-item-text">{{house.Price}}</p>
                            </div>
                        </div>
                        <div class="clear"></div>
                    </div>
                </div>

                <!-------THIS ITEM CODE WILLL BE GENERATED BY ANGULAR.JS SO SECOND ITEM JUST FOR SHOW-------->
                <nav class="pagination-navbar" ng-show="houses.length > 0">
                    <ul class="pagination" ng-repeat="page in paging.totalPages()">
                        <li><a href="#" ng-click="loadRows(page)">{{page}}</a></li>
                    </ul>
                </nav>

            </div>
        </div>
    </div>
</div>
